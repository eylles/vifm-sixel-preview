# EditorConfig

# apply to all files
[*]

# top-most EditorConfig file
root = true

# Set default charset
charset = utf-8

# Indentation
# indent with spaces
indent_style = space
# same tab size as kernel style
indent_size = 4
[Makefile]
indent_style = tab

# no trailing spaces
trim_trailing_whitespace = true

# line lenght, same as kernel stipulated
max_line_length = 100

# all files have a final line
insert_final_newline = true

# end of line
end_of_line = lf
